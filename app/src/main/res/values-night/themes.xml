<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YTCompanion" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/PrimaryDark</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="textFillColor">@color/textDark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/SecondaryDark</item>
        <item name="colorSecondaryVariant">@color/SecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customization. -->
        <item name="android:navigationBarColor">@color/darkerAccent</item>

        <item name="android:colorBackgroundFloating">@color/floatingDark</item>
        <item name="haloColor">@color/floatingDarkBorder</item>

        <item name="dividerColor">@color/dividerDark</item>

    </style>
</resources>